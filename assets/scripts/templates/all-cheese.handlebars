<div class="cheese section row">
  <div class="container">
    {{#each cheeses}}
      <div class="{{this.family}}-cheese section col-lg-15">
        <form id="add-{{this.name}}">
          <div class="{{this.name}}" data-id="{{this.id}}">
              <h2>{{this.name}}</h2>
              <p>Milk type: {{this.milk_type}}</p>
              <p>Country of origin: {{this.country_of_origin}}</p>
              <p>Flavor profile: {{this.flavor}}</p>
            <button type="submit" name="cheese[{{this.id}}]" class="btn btn-primary add-cheese-button">Add to Board</button>
          </div>
        </form>
      </div>
    {{/each}}
  </div>
</div>
